{
  "JavaScript_Roadmap": {
    "Fundamentals": {
      "topics": [
        "Variables (let, const, var)",
        "Data Types (String, Number, Boolean, Null, Undefined, Symbol, BigInt)",
        "Operators (Arithmetic, Comparison, Logical, Bitwise, Ternary)",
        "Control Flow (if-else, switch-case)",
        "Loops (for, while, do-while, for-in, for-of)",
        "Functions (Declaration, Expression, Arrow Functions)",
        "Scopes (Global, Local, Block, Lexical)",
        "Hoisting",
        "Closures"
      ]
    },
    "Intermediate": {
      "topics": [
        "Objects and Prototypes",
        "Array Methods (map, filter, reduce, forEach, find, some, every, sort)",
        "ES6+ Features (Template Literals, Destructuring, Spread & Rest Operator, Default Parameters, Optional Chaining)",
        "Modules (import/export, CommonJS, ES Modules)",
        "Promises & Async/Await",
        "Event Loop & Microtasks",
        "DOM Manipulation",
        "LocalStorage, SessionStorage, Cookies",
        "Error Handling (try-catch, finally)"
      ]
    },
    "Advanced": {
      "topics": [
        "Asynchronous JavaScript (Callbacks, Promises, Async/Await)",
        "Generators & Iterators",
        "Prototype & Prototypal Inheritance",
        "JavaScript Design Patterns",
        "Web APIs (Fetch API, WebSockets, Service Workers)",
        "Functional Programming (Pure Functions, Higher-Order Functions, Currying, Composition)",
        "Memory Management & Garbage Collection",
        "Debouncing & Throttling",
        "Event Delegation",
        "Web Performance Optimization",
        "Multithreading with Web Workers"
      ]
    },
    "Modern JavaScript & Frameworks": {
      "topics": [
        "ESNext Features",
        "Babel & Transpilers",
        "TypeScript Basics",
        "Node.js & Backend JavaScript",
        "NPM & Package Management",
        "Frontend Frameworks (React, Vue, Angular)",
        "State Management (Redux, Recoil, Zustand, MobX)",
        "GraphQL vs REST APIs",
        "Web Security Best Practices"
      ]
    },
    "Testing & Deployment": {
      "topics": [
        "Unit Testing (Jest, Mocha, Chai)",
        "Integration Testing",
        "CI/CD Pipelines",
        "Serverless & Cloud Functions",
        "Docker & Containerization",
        "Building & Bundling (Webpack, Parcel, Vite)"
      ]
    }
  }
}
